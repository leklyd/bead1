{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Elvégzendő dolgaink</h1>
</div>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Időpont</th>
            <th>Státusz</th>
            <th>Helyszín</th>
            <th>Leírás</th>
            <th>Módosítás</th>
            <th>Megjegyzés</th>
            <th>Törlés</th>
        </tr>   
    </thead>
    <tbody>
        {{#each todos}}
            <tr>
                <td>{{date}}</td>
                <td><span class="label label-{{statusClass}}">{{statusText}}</span></td>
                <td>{{location}}</td>
                <td><span class="badge">{{numberOfMessages}}</span> {{description}}</td>
                <td><a href="/todos/edit{{id}}" class="btn btn-default">Teendő módosítása</a></td>
                <td><a href="/todos/comment{{id}}" class="btn btn-default">Megjegyzés</a></td>
                <td><a href="/todos/delete{{id}}" class="btn btn-default">Teendő törlése</a></td>
            </tr>
        {{/each}}
    </tbody>
</table>

<p><a href="/todos/new" class="btn btn-default">Új teendő felvitele</a></p>

{{#each todo.comments}}
<li href="#" class="list-group-item">
    <h4 class="list-group-item-heading">{{username}} <small>{{date}}</small></h4>
    <p class="list-group-item-text">{{text}}</p>
</li>
{{/each}}