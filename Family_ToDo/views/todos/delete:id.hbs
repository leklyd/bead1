{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Egy elvégzendő dolog törlése</h1>
</div>

<form class="form-horizontal" method="post">
    <fieldset>
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>Időpont</th>
                    <th>Státusz</th>
                    <th>Helyszín</th>
                    <th>Leírás</th>
                </tr>   
            </thead>
            <tbody>
                <tr>
                    <td>{{todo.date}}</td>
                    <td><span class="label label-{{todo.statusClass}}"></span>{{todo.status}}</td>
                    <td>{{todo.location}}</td>
                    <td><span class="badge">{{todo.numberOfMessages}}</span> {{todo.description}}</td>
                </tr>
                <tr>
                    <td><p><a href="/todos/list" class="btn btn-default">Mégse</a></p></td>
                    <td><button type="submit" class="btn btn-primary">Törlés</button0></td>
                </tr>
            </tbody>
        </table>
    </fieldset>
</form>